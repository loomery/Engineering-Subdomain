---
import type { Contributor as Contributor } from '../../utils/sanity';

interface Props {
icons: string[];
technologies: string[];
tools: string[];
features: string[];
contributors: Contributor[];
}

const {
icons,
technologies,
tools,
features,
contributors
} = Astro.props;
---

<section class="grid md:grid-cols-2 lg:grid-cols-4">
    <div class="mb-8" data-aos="fade-in">
        <h1 class="text-3xl">Project overview</h1>
    </div>

    <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 col-span-3">
        <div data-aos="fade-in">
            <h1 class="text-xl">Technologies</h1>
            <ul class="space-y-1 py-4 font-thin">
                {technologies.map((technology: string) => (
                <li>{technology}</li>
                ))}
            </ul>
        </div>

        <div data-aos="fade-in">
            <h1 class="text-xl">Tools</h1>
            <ul class="space-y-1 py-4 font-thin">
                {tools.map((tool: string) => (
                <li>{tool}</li>
                ))}
            </ul>
        </div>

        <div data-aos="fade-in">
            <h1 class="text-xl">Key features</h1>
            <ul class="space-y-1 py-4 font-thin">
                {features.map((feature: string) => (
                <li>{feature}</li>
                ))}
            </ul>
        </div>

        <div data-aos="fade-in">
            <h1 class="text-xl">Contributors</h1>
            <ul class="space-y-1 py-4 font-thin">
                {contributors.map((contributor: Contributor) => (
                <li><a href={contributor.url}
                        class="transition-colors duration-200 hover:text-accent font-sans"
                        target="_blank"
                    >{contributor.name}
                </a></li>
                ))}
            </ul>
        </div>
    </section>
</section>