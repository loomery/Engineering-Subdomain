---
import { urlForImage } from '../sanity/urlForImage';
import type { TechStack } from '../utils/sanity';
import PortableText from './PortableText/PortableText.astro';

interface Props {
stack: TechStack;
}

const { stack } = Astro.props;
---

<section class="flex flex-col items-center">
    <h1 class="text-5xl p-8" data-aos="fade-in">The stack</h1>

    <div class="p-16 space-y-16 flex flex-col items-center">
        {stack.tools.map((tool, index) => (
            <div class="flex flex-col text-center space-y-4 items-center max-w-lg">
                {index !== 0 && <img src="/down.svg" class="h-24" data-aos="fade-down" />}

                <img src={urlForImage(tool.icon).url()} class={"h-32"} data-aos="fade-in">
                <h3 class="text-2xl p-4" data-aos="fade-up">{tool.name}</h3>
                <div class="text-lg" data-aos="fade-up">
                    <PortableText portableText={tool.detail} />
                </div>
            </div>
        ))}
    </div>
</section>
