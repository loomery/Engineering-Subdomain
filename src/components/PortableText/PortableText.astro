---
import { PortableText as PortableTextInternal } from 'astro-portabletext'
import { mergeComponents } from 'astro-portabletext/utils';
import BulletListStyle from './Styles/BulletListStyle.astro';
// import NumberedListStyle from './Styles/NumberedListStyle.astro';
import LinkStyle from './Styles/LinkStyle.astro';
import BoldStyle from './Styles/BoldStyle.astro';

const { portableText } = Astro.props;

const customComponents = {
    list: {
        bullet: BulletListStyle,
        // number: NumberedListStyle,
    },
    mark: {
        link: LinkStyle,
        strong: BoldStyle,
    }
};

// @ts-ignore
const components = mergeComponents(customComponents, {});
---


<PortableTextInternal class:list={'font-light text-md'} value={portableText} components={components} />
