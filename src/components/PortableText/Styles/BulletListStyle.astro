---
import type { Props as $, ListItem } from "astro-portabletext/types";

export type Props = $<ListItem>;

const { node, index, isInline, ...attrs } = Astro.props;
---

<ul {...attrs} data-listitem><slot /></ul>

<style>
  ul {
    list-style: disc;
    margin-top: 1.25em;
    margin-bottom: 1.25em;
    padding-left: 1.625em
  }
</style>
