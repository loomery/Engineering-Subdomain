---
interface Props {
    title: string,
    goals: string[];
};

const {
    title,
    goals
} = Astro.props;
---

<section class="flex flex-col items-center">
    <h1 class="text-4xl pb-16 max-w-2xl text-center" data-aos="fade-in">{title}</h1>

    <div class="custom-bullet space-y-16 max-w-4xl">
        {goals.map((goal) => (
          <div class="bullet-item">
            <img src="/Goal.png" alt="Bullet" data-aos="zoom-in" />
            <p class="text-2xl text-left" data-aos="fade-right" data-aos-offset="20">{goal}</p>
          </div>
        ))}
      </div>
</section>

<style>
    .custom-bullet {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .bullet-item {
        display: flex;
        align-items: center;
        text-align: center;
    }

    .bullet-item img {
        margin-right: 2rem;
        width: 60px;
    }
</style>