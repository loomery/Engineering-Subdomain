---
interface Props {
    title: string,
    sectionClass?: string,
}

const {
    title,
    sectionClass
} = Astro.props;
---

<section class="grid space-y-4 lg:space-y-0 lg:gap-10 lg:grid-cols-4">
    <div data-aos="fade-in">
        <h1 class="text-3xl">{title}</h1>
    </div>

    <section class={sectionClass ?? 'lg:col-span-3'} data-aos="fade-in" >
        <slot />
    </section>
</section>